%header.header
  %div.header-wrapper
    %div.header-top
      %a.header-top__img{href: "/"}
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1734511784"}
      %form.header-top__search{action: "/", method: "post"}
        %input#top-search{type: "search", name: "keyword", placeholder: "何かお探しですか？"}
        %i.fa.fa-search
    %div.header-nav
      %nav.header-nav__left
        %ul.header-nav__left__lists
          %li.header-nav__left__category
            %a{href: '#'}
              %i.fa.fa-list-ul
              %span カテゴリーから探す
          %li.header-nav__left__brand
            %a{href: '#'}
              %i.fa.fa-tag
              %span ブランドから探す
      %div.header-nav__right
        %ul.header-nav__right__lists
          %li.header-nav__right__news
            %a{href: '#'}
              %i.fa.fa-bell-o
              %span お知らせ
          %li.header-nav__right__todo
            %a{href: '#'}
              %i.fa.fa-check
              %span やることリスト
          %li.header-nav__right__mypage
            %a{href: '#'}
              %figure.header-nav__right__mypage__icon
                %div
                  %img{src: "https://static.mercdn.net/images/member_photo_noimage_thumb.png"}
              %span マイページ
